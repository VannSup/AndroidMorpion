<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_morpion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/bienvenue" />

    <LinearLayout
        android:id="@+id/linear_layout_0"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_morpion">

        <ImageButton
            android:id="@+id/case1_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            tools:visibility="visible"/>

        <ImageButton
            android:id="@+id/case1_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/case1_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_0">

        <ImageButton
            android:id="@+id/case2_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/case2_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/case2_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_1">

        <ImageButton
            android:id="@+id/case3_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/case3_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/case3_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            tools:visibility="visible" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_morpion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_2"
        android:text="@string/au_x" />

    <Button
        android:id="@+id/button_replay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/replay"
        app:layout_constraintTop_toBottomOf="@id/text_view_morpion2" />

</androidx.constraintlayout.widget.ConstraintLayout>